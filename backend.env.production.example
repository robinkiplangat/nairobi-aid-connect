# Backend Production Environment Variables
# Copy this file to backend/.env and update with your actual values

# App Configuration
APP_ENV=production
DEBUG_MODE=false
LOG_LEVEL=WARNING

# CORS Configuration - IMPORTANT FOR FRONTEND ACCESS
# Comma-separated list of allowed origins (no spaces around commas)
CORS_ALLOWED_ORIGINS=https://sos-nairobi.space,https://www.sos-nairobi.space

# Database Configuration
MONGODB_URI=mongodb://your-mongodb-connection-string
MONGODB_DATABASE_NAME=sos_nairobi_db

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_DB=0
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Security Settings
ENCRYPTION_KEY=your-secure-encryption-key-here
REQUIRE_HTTPS=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_LOGGING=true
SESSION_TIMEOUT_MINUTES=30
MAX_REQUESTS_PER_MINUTE=10

# External API Keys
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
GOOGLE_API_KEY=your-google-api-key

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Feature Flags
ENABLE_TWITTER_MONITORING=true

# Privacy Settings
LOCATION_OBFUSCATION_FACTOR=0.002
LOCATION_PRECISION_DIGITS=3
ENABLE_LOCATION_ANONYMIZATION=true
DATA_RETENTION_DAYS=30 